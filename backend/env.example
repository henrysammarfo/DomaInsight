# DomaInsight Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001

# Doma Testnet Configuration
DOMA_SUBGRAPH_URL=https://api-testnet.doma.xyz/graphql
DOMA_TESTNET_RPC=https://rpc-testnet.doma.xyz

# Wallet Configuration (for on-chain actions)
# WARNING: Never commit your private key to version control!
# Use a testnet wallet with minimal funds for development
PRIVATE_KEY=your_testnet_private_key_here
WALLET_ADDRESS=your_wallet_address_here

# Multi-chain Configuration
DOMA_MAINNET_RPC=https://rpc.doma.xyz
DOMA_POLYGON_RPC=https://rpc-polygon.doma.xyz
DOMA_ARBITRUM_RPC=https://rpc-arbitrum.doma.xyz

# Contract Addresses (Doma Protocol)
DOMA_REGISTRY_CONTRACT=0x00000000000C2E074eC69A0dFb2997BA6C7d2e1e
DOMA_TOKENIZER_CONTRACT=0x0000000000000000000000000000000000000000
DOMA_AUCTION_CONTRACT=0x0000000000000000000000000000000000000000

# Alert Configuration
ALERT_CHECK_INTERVAL=30000
ALERT_EXPIRY_THRESHOLD=7
ALERT_MIN_SCORE_THRESHOLD=70

# API Keys (if needed for additional services)
# OPENAI_API_KEY=your_openai_key_here
# ALCHEMY_API_KEY=your_alchemy_key_here
